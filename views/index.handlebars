<div class="container">
    <div class="row">
        <div class="jumbotron" id="style-opacity">
            <h1 id="burgerTitle">Eat-Da-Burger!</h1> 
        </div>
    </div>
    <div class="row">
        <form class="create-burger">
            <div class="form-group">
                <label for="burgerName">Enter a burger you want to eat:</label>
                <input type="text" class="form-control" id="burgerName">
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>

    <div class="row">
        <div class="col-md-6" id="burgersToEat_Col">
            <h2>Burgers to Eat</h2>
            <ul>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/uneaten-burger-block}}
                    {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6" id="burgersEaten_Col">
            <h2>Burgers Eaten</h2>
            <ul>
                {{#each burgers}}
                    {{#if devoured}}
                        {{> burgers/eaten-burger-block}}
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>
